DirectoryIndex index.php
<IfModule mod_rewrite.c>
RewriteEngine on

# Remove extention .php from files
RewriteRule ^index\.php$ - [L,NC]

# Remove trailing slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*[^/])/$ /$1 [L,R] 

RewriteRule ^tasks/(\d+)/?$ ?task_id=$1 [QSA,NC,DPI]
RewriteRule ^lists/(\d+)/?$ ?list_id=$1 [QSA,NC,DPI]
RewriteRule ^projects/(\d+)/?$ ?project_id=$1 [QSA,NC,DPI]

RewriteRule ^projects/(\d+)/lists/(\d+)/tasks/(\d+)$ ?project_id=$1&list_id=$2&task_id=$3 [QSA,NC,DPI]
RewriteRule ^projects/(\d+)/lists/(\d+)$ ?project_id=$1&list_id=$2 [QSA,NC,DPI]
RewriteRule ^projects/(\d+)/tasks/(\d+)$ ?project_id=$1&task_id=$2 [QSA,NC,DPI]
RewriteRule ^lists/(\d+)/tasks/(\d+)?$ ?list_id=$1&task_id=$2 [QSA,NC,DPI]

# If the request is not for a valid directory
RewriteCond %{REQUEST_FILENAME} !-d
# If the request is not for a valid file
RewriteCond %{REQUEST_FILENAME} !-f
# route to index.php in current directory
RewriteRule ^(.+)$ index.php [L,QSA] 

</IfModule>